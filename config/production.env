# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/neoshop_ultra_prod"
DATABASE_CONNECTION_LIMIT="20"
DATABASE_ACQUIRE_TIMEOUT="60000"
DATABASE_IDLE_TIMEOUT="30000"
DATABASE_QUERY_TIMEOUT="30000"
DATABASE_TRANSACTION_TIMEOUT="60000"
DATABASE_MAX_CONNECTIONS="100"
DATABASE_SHARED_BUFFERS="512MB"
DATABASE_EFFECTIVE_CACHE_SIZE="2GB"
DATABASE_WORK_MEM="8MB"
DATABASE_MAINTENANCE_WORK_MEM="128MB"
DATABASE_WAL_BUFFERS="32MB"

# NextAuth Configuration
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-super-secret-key-here"
NEXTAUTH_TRUST_HOST="true"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
STRIPE_CURRENCY="USD"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Email Configuration (Resend)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="NEOSHOP ULTRA"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# Application Configuration
NODE_ENV="production"
PORT="3000"
HOST="0.0.0.0"

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-32-character-encryption-key"
CSRF_SECRET="your-csrf-secret-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS="false"

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com"
CORS_CREDENTIALS="true"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="/var/log/neoshop-ultra"
LOG_MAX_SIZE="10MB"
LOG_MAX_FILES="5"

# Monitoring Configuration
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"
GOOGLE_TAG_MANAGER_ID="your-gtm-id"

# Backup Configuration
BACKUP_DIR="/backups/neoshop-ultra"
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"

# CDN Configuration
CDN_URL="https://cdn.yourdomain.com"
CDN_CACHE_TTL="31536000"

# SSL Configuration
SSL_CERT_PATH="/etc/ssl/certs/yourdomain.com.crt"
SSL_KEY_PATH="/etc/ssl/private/yourdomain.com.key"

# Domain Configuration
DOMAIN="yourdomain.com"
SUBDOMAIN="www"
API_DOMAIN="api.yourdomain.com"

# Performance Configuration
ENABLE_COMPRESSION="true"
ENABLE_CACHING="true"
CACHE_TTL="3600"
MAX_REQUEST_SIZE="10MB"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_MONITORING="true"
ENABLE_LOGGING="true"
ENABLE_RATE_LIMITING="true"
ENABLE_CORS="true"
ENABLE_CSRF="true"
ENABLE_SECURITY_HEADERS="true"

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-admin-password"
SUPER_ADMIN_EMAIL="superadmin@yourdomain.com"
SUPER_ADMIN_PASSWORD="your-super-admin-password"

# Notification Configuration
SLACK_WEBHOOK_URL="your-slack-webhook-url"
DISCORD_WEBHOOK_URL="your-discord-webhook-url"
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# File Upload Configuration
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif,application/pdf"
UPLOAD_DIR="/var/www/uploads"

# Session Configuration
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE="2592000"
SESSION_SECURE="true"
SESSION_HTTP_ONLY="true"
SESSION_SAME_SITE="strict"

# Cache Configuration
CACHE_REDIS_URL="redis://localhost:6379/1"
CACHE_TTL="3600"
CACHE_MAX_SIZE="1000"

# Search Configuration
SEARCH_ENGINE="elasticsearch"
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="neoshop_ultra"

# Queue Configuration
QUEUE_REDIS_URL="redis://localhost:6379/2"
QUEUE_CONCURRENCY="5"
QUEUE_MAX_ATTEMPTS="3"
QUEUE_RETRY_DELAY="5000"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT="30000"
WEBHOOK_RETRY_ATTEMPTS="3"

# API Configuration
API_VERSION="v1"
API_RATE_LIMIT="1000"
API_TIMEOUT="30000"
API_CORS_ORIGIN="https://yourdomain.com"

# Database Pool Configuration
DB_POOL_MIN="2"
DB_POOL_MAX="20"
DB_POOL_ACQUIRE_TIMEOUT="60000"
DB_POOL_IDLE_TIMEOUT="30000"
DB_POOL_CREATE_TIMEOUT="30000"
DB_POOL_DESTROY_TIMEOUT="5000"
DB_POOL_REAP_INTERVAL="1000"
DB_POOL_CREATE_RETRY_INTERVAL="200"
DB_POOL_ACQUIRE_RETRY_ATTEMPTS="3"




